	<script>
		function loader ()
		{
			//dojo.registerModulePath("lwidgets", "./lwidgets");
			dojo.require("dojo.cache");
			dojo.require("dojo.parser");
			dojo.require('dijit._Widget');
			dojo.require('dijit._Templated');
			dojo.require("lwidgets.Lobby");
			dojo.addOnLoad(callback_main);
		}
		//dojo.config.parseOnLoad = true;
		dojo.config.dojoBlankHtmlUrl = 'blank.html';
		dojo.addOnLoad(loader);
		
		function uberCommunicator(msg)
		{
			dojo.publish('Lobby/receive', [{'msg':msg }]  )
		}
		
		function callback_main()
		{
			var lobby = new lwidgets.Lobby({
				'lname':'Lobby1'
			});
			lobby.placeAt('lobbydiv');
			lobby.startup2();
			dojo.parser.parse();
			
			//test commands here
			//uberCommunicator('JOINFAILED 1up you cant join');
		}
		
		// Global variables
		var java_socket_bridge_ready_flag = false;
		// Applet reports it is ready to use
		function java_socket_bridge_ready()
		{
			java_socket_bridge_ready_flag = true;
		}
		function on_socket_get( message )
		{
			uberCommunicator(message)
		}
		
	</script>
	
